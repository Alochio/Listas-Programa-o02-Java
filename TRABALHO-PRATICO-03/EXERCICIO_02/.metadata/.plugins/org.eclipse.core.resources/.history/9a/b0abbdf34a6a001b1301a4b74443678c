//		for(int cont = 0; cont < getLinhas(); cont++){
//			for(int cont2 = 0; cont2 < getColunas(); cont2++){
//				System.out.print("0  ");
//						
//			}
//			System.out.println("");
//		}
//		
//	}
	

}
