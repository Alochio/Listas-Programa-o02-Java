package principal;
import java.util.Scanner;

public class Matriz {

	private int linhas, colunas;
	int[][] matriz = new int[50][50];
	
	Scanner scan = new Scanner(System.in);
	
	
	public void setLinhas(int linhas){
		this.linhas = linhas;
		
	}
	public int getLinhas(){
		return this.linhas;
	}
	
	
	public void setColunas(int colunas){
		this.colunas = colunas;
	}
	public int getColunas(){
		return this.colunas;
	}
		
	public void preencherMatriz(){
		System.out.println("Preencha a matriz: ");
		
			for(int cont = 0; cont < linhas; cont++){
				for (int cont2 = 0; cont2 < colunas; cont2++){
					System.out.print("[" + cont + "][" + cont2 + "] = ");
					matriz[cont][cont2] = scan.nextInt();
				}
			}

	}
	
	public void editarValor(int i, int j){
		System.out.println("Editando valor da posição [" + i + "][" + j + "]");
		matriz[i][j] = scan.nextInt();
		
	}
	
//	
