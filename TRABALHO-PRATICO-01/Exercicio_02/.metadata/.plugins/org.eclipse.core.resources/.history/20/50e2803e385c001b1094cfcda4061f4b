package principal;
import java.util.Scanner;

public class Main {
	public  static void main(String[] args){
		
		int n;
		
		System.out.print("Quantos numeros deseja digitar:");
		
		Scanner scan = new Scanner(System.in);
		n = scan.nextInt();
		
		int[] vet = new int[n];
		
		lerValores(vet,n);
		
			
	}
	public static int lerValores(int vet[], int n){
		
		System.out.println("Agora digite os numeros:");
		
		Scanner sc = new Scanner(System.in);
		
		for(int cont = 0; cont < vet.length; cont++){
			System.out.print("vet [" + cont + "] = ");
			vet[cont] = sc.nextInt();
		}
		
		System.out.println("Valores salvos!");
		
		numerosPrimos(vet);
		return n;
	}
	
	public static void numerosPrimos(int vet[]){
		
		int[] vetPrimos = new int[vet.length];
		int[] posicaoPrimos = new int [vet.length];
		
		for(int cont = 0; cont < vet.length; cont++){
			if ( vet[cont] % 2 == 0){
				System.out.print("passei aqui!");
				
//				já foi criada a primeira condição, agr tem que fazer o mesmo
//				com as outras condicoes que tornam um numero primo
//				eu pretendo salvar os valores dos numeros primos dentro do 
//				vetor vetPrimos e salvar a posição deles dentro do vetor
//				posicaoPrimos. Depois de tudo isso é só imprimir tudo.
			}
		}
		
	}

}
