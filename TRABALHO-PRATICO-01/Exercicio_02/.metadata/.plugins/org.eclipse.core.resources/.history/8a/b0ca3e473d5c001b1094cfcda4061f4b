package principal;
import java.util.Scanner;

public class Main {
	public  static void main(String[] args){
		
		int n;
		
		System.out.print("Quantos numeros deseja digitar:");
		
		Scanner scan = new Scanner(System.in);
		n = scan.nextInt();
		
		int[] vet = new int[n];
		
		lerValores(vet,n);
		
			
	}
	public static int lerValores(int vet[], int n){
		
		System.out.println("Agora digite os numeros:");
		
		Scanner sc = new Scanner(System.in);
		
		for(int cont = 0; cont < vet.length; cont++){
			System.out.print("vet [" + cont + "] = ");
			vet[cont] = sc.nextInt();
		}
		
		System.out.println("Valores salvos!");
		
		numerosPrimos(vet);
		return n;
	}
	
	public static void numerosPrimos(int vet[]){
		
		int[] vetPrimos = new int[vet.length];
		int[] posicaoPrimos = new int [vet.length];
		
		for(int i = 0; i < vet.length; i++){
			for(int j = 2; j < vet[i]; j++){
				if (vet[i] % j == 0){
				}else{
					vetPrimos[i] = vet[i];
					posicaoPrimos[i] = i;
				}
			}
		}
		
		System.out.println("Dos numeros digitados, são primos: ");
		
		for(int cont = 0; cont < vet.length; cont++){
			System.out.print(vetPrimos[cont] + " ");
		}
		
		System.out.println();
		System.out.println("Posição: ");
		
		for(int cont = 0; cont < vet.length; cont++){
			System.out.print(posicaoPrimos[cont] + " ");
		}
	}

}
