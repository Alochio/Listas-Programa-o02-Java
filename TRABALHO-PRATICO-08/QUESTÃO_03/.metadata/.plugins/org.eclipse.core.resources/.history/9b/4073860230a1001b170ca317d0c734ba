//CLASSE QUE USAREMOS COM O INTUITO DE CRIAR AS NOSSAS FORMAS, PARA QUE SÓ POSSAM SER CIADAS POR AQUI
package formasGeometricas;

public class CriaFormas {

	public static FormasGeometricas CriaForma(String forma){
		
		if(forma.equals("Quadrado"))
			return new Quadrado();
		
		else if(forma.equals("Triangulo"))
			return new Triangulo();
		
		else if(forma.equals("Retangulo"))
			return new Retangulo();
		
		else
			return new FormasGeometricas(forma);	
	}	
}