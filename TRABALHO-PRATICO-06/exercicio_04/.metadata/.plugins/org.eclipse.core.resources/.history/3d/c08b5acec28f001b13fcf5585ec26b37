package loja;

import loja.DVD;
import loja.CD;

public class Figura {
	
	private int infoMidia;
	private String tipoMidia;
		
	private Midia dvd = new DVD();
	private Midia cd = new CD();
	
//--------------------------------------------------------------------------
//METODOS GET AND SET
	public int getInfoMidia() {
		return infoMidia;
	}

	public void setInfoMidia(int infoMidia) {
		this.infoMidia = infoMidia;
	}

	public String getTipoMidia() {
		return tipoMidia;
	}

	public void setTipoMidia(String tipoMidia) {
		this.tipoMidia = tipoMidia;
	}
//--------------------------------------------------------------------------
//CONSTRUTOR
	public Figura(){
		
	}
//--------------------------------------------------------------------------	

	public void printDetalhes(String tipoMidia){
		if(dvd.getTipo().equals("DVD")){
			System.out.println("Capa do DVD");
		}	
		else if(cd.getTipo().equals("CD")){
			System.out.println("Capa do CD");
		}
	}
	
	
	

}
