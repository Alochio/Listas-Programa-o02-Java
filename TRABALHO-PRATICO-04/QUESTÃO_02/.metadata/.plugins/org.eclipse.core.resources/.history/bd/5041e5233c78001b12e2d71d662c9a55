package principal;

import principal.Departamento;

public class Universidade {

// VARIAVEIS DA CLASSE
	private String nome, endereco;
	private static int cont = 0;
	private Departamento[] departamento = new Departamento[50];
	
//	private String[] vetor = new String[10];
