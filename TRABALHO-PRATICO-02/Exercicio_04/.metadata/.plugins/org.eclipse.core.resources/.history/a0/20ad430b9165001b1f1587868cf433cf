	public void declaraLimitrofe(){
		int aux = 1;
		for(int cont = 0; cont < limitrofes.length; cont++){
			System.out.print("Digite o " + aux + " país limitrofe: ");
			limitrofes[cont] = sc.next();
			aux++;
		}
	}
	
