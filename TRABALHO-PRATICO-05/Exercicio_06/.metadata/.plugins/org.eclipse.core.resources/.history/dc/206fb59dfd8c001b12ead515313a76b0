package principal;

public class Main {
	public static void main(String[] args){
		
		Pessoa p1 = new Pessoa();
		
		p1.setNome("Rafael");
		p1.setIdade(20);
		
		System.out.println("----------------------------------------");
		System.out.println("Informações da pessoa\n" 
		+"nome: " + p1.getNome() + "\nIdade: " + p1.getIdade());
		System.out.println("----------------------------------------");
		
		
		
		Rica r1 = new Rica();
		r1.setDinheiro(1000.50);
		r1.fazCompras(258.85);
		System.out.println("Valor em caixa: " + r1.getDinheiro());
		System.out.println("----------------------------------------");
		
		
		
		
		
		
		
		
	}

}
